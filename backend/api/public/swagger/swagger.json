    "components": {
        "schemas": {
            "Account": {
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "uuid-1234"
                    },
                    "name": {
                        "type": "string",
                        "example": "João da Silva"
                    },
                    "balance": {
                        "type": "number",
                        "format": "float",
                        "example": 100.5
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "AccountCreate": {
                "required": [
                    "name",
                    "balance"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "João da Silva"
                    },
                    "balance": {
                        "type": "number",
                        "format": "float",
                        "example": 100.5
                    }
                },
                "type": "object"
            },
            "AccountUpdate": {
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "João da Silva"
                    },
                    "balance": {
                        "type": "number",
                        "format": "float",
                        "example": 150
                    }
                },
                "type": "object"
            },
            "Withdraw": {
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "withdraw-uuid-1234"
                    },
                    "account_id": {
                        "type": "string",
                        "example": "account-uuid-1234"
                    },
                    "amount": {
                        "type": "number",
                        "format": "float",
                        "example": 50
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "status": {
                        "type": "string",
                        "example": "pending"
                    }
                },
                "type": "object"
            },
            "WithdrawCreate": {
                "required": [
                    "method",
                    "pix",
                    "amount",
                    "schedule"
                ],
                "properties": {
                    "method": {
                        "type": "string",
                        "example": "PIX"
                    },
                    "pix": {
                        "required": [
                            "type",
                            "key"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "example": "email"
                            },
                            "key": {
                                "type": "string",
                                "example": "no-reply@example.com"
                            }
                        },
                        "type": "object"
                    },
                    "amount": {
                        "type": "number",
                        "example": 10000
                    },
                    "schedule": {
                        "type": "string",
                        "example": "2025-08-24 00:00"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "user@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    }
                },
                "type": "object"
            },
            "LoginResponse": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "data": {
                        "properties": {
                            "access_token": {
                                "type": "string",
                                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                            },
                            "token_type": {
                                "type": "string",
                                "example": "Bearer"
                            },
                            "expires_in": {
                                "type": "integer",
                                "example": 3600
                            }
                        },
                        "type": "object"
                    },
                    "message": {
                        "type": "string",
                        "example": "Login realizado com sucesso"
                    }
                },
                "type": "object"
            },
            "LogoutResponse": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "data": {
                        "properties": {
                            "logged_out": {
                                "type": "boolean",
                                "example": true
                            }
                        },
                        "type": "object"
                    },
                    "message": {
                        "type": "string",
                        "example": "Logout realizado com sucesso"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Use o token JWT gerado no login. Exemplo: 'Bearer {token}'",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
